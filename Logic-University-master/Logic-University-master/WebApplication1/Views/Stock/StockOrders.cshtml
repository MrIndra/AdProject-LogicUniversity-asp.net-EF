@using WebApplication1.Models
@{
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
    ViewBag.Title = "Stock Orders";
    List<Order> orders = (List<Order>)ViewData["ApprovedOrders"];
}

<div class="ui grid">
    <div class="sixteen wide tablet column">
        <table class="ui celled table">
            <thead>
                <tr>
                    <th>Submitted Date</th>
                    <th>Supplier</th>
                    <th>Requestor</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (orders != null)
                {
                    foreach (var o in orders)
                    {
                        <tr>
                            <td>@o.Date.ToString("d/MM/yyyy")</td>
                            <td>@o.Supplier.SupplierCode</td>
                            <td>@o.Requestor.Username</td>
                            <td><a href="http://localhost:50271/receivestocks/@o.OrderId">View</a></td>
                        </tr>
                    }
                }
            </tbody>
            
        </table>
    </div>
</div>

